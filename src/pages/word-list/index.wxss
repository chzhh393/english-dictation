.container {
  min-height: 100vh;
  padding: 40rpx;
}

.header {
  margin: 40rpx 0;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.empty {
  margin: 100rpx 0;
  text-align: center;
  color: #999;
}

.word-list {
  margin-top: 40rpx;
}

.word-list-item {
  margin: 20rpx 0;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.word-list-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  display: block;
}

.word-list-count {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}

.action-btn {
  margin-top: 60rpx;
  padding: 0 40rpx;
} 