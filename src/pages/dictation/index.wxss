.container {
  min-height: 100vh;
  padding: 40rpx;
  background: #f7f8fa;
}

.header {
  margin: 40rpx 0;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}

.progress {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

.dictation-area {
  margin-top: 60rpx;
}

.word-card {
  background: #fff;
  padding: 40rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.meaning {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  display: block;
  margin-bottom: 30rpx;
}

.play-btn {
  margin-bottom: 30rpx;
}

.answer-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  text-align: center;
}

.navigation {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.nav-btn {
  flex: 1;
}

.config-btn {
  position: fixed;
  top: 20rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.config-btn .icon-setting {
  width: 100%;
  height: 100%;
  font-size: 40rpx;
  color: #333;
}

.config-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
  display: flex;
  flex-direction: column;
}

.config-header {
  padding: 30rpx;
  background: #fff;
  text-align: center;
}

.config-title {
  font-size: 32rpx;
  font-weight: bold;
}

.config-content {
  flex: 1;
  background: #fff;
  overflow-y: auto;
}

.config-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.config-label {
  font-size: 28rpx;
  color: #333;
}

.config-item slider {
  flex: 1;
  margin: 0 20rpx;
}

.config-footer {
  padding: 30rpx;
  background: #fff;
  display: flex;
  gap: 20rpx;
}

.footer-btn {
  flex: 1;
}

.cancel-btn {
  background: #f7f7f7;
  color: #666;
} 