.container {
  min-height: 100vh;
  padding: 40rpx;
  background: #f7f8fa;
}

.header {
  margin: 60rpx 0;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.feature-list {
  margin: 60rpx 0;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.feature-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.feature-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}
