.container {
  min-height: 100vh;
  padding: 40rpx;
  background: #f7f8fa;
}

.form {
  margin-bottom: 40rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.form-item {
  padding: 20rpx;
  border-bottom: 1px solid #ebedf0;
}

.form-label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #646566;
}

.form-input {
  width: 100%;
  height: 64rpx;
  padding: 0 16rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.action-buttons {
  margin: 40rpx 0;
}

.word-list {
  margin-top: 40rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.word-list-title {
  font-size: 32rpx;
  color: #323233;
  padding: 20rpx;
  border-bottom: 1px solid #ebedf0;
}

.word-item {
  margin: 20rpx 0;
}

.submit-button {
  margin-top: 40rpx;
} 