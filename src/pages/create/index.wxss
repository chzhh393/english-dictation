.container {
  min-height: 100vh;
  padding: 40rpx;
  background: #f7f8fa;
}

.form {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.action-buttons {
  padding: 40rpx;
}

.word-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-top: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.word-item {
  margin-bottom: 30rpx;
}

.word-form {
  display: flex;
  gap: 20rpx;
}

.word-input {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}